@model IEnumerable<YemekTenceremCom.Models.Yemek>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Malzemeler)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hazirlanisi)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Malzemeler)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hazirlanisi)
            </td>
            <td>
                @if (Context.Session.GetString("kAdi") != null)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                }
                
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
